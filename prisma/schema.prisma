generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}
model User {
  id  String @id @default(auto()) @map("_id") @db.ObjectId
  username  String  
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  feedbacks Feedback[]
}
model Feedback {
  id  String @id @default(auto()) @map("_id") @db.ObjectId
  title String
  rating Int
  description String
  createdAt DateTime @default(now())
  userId String
  user User @relation(fields: [userId], references: [id])
}

