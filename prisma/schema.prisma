generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}
model User {
  id  String @id @default(auto()) @map("_id") @db.ObjectId
  username  String  
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  feedbacks Feedback[]
  projects Project[]
  active Boolean @default(false)
  premium Boolean @default(false)
  websiteUrl String 

}
model Project {
  id String @id @default(auto()) @map("_id") @db.ObjectId 
  createdAt DateTime @default(now())
  userId String
  user User @relation(fields: [userId], references: [id])
  feedbacks Feedback[]
}
model Feedback {
  id  String @id @default(auto()) @map("_id") @db.ObjectId
  title String
  rating Int
  description String
  createdAt DateTime @default(now())
  // ipAddress String
  // country String
  userId String
  user User @relation(fields: [userId], references: [id])
  projectId String
  project Project @relation(fields: [projectId], references: [id])
}

